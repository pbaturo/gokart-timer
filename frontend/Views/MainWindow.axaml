<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:frontend.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="frontend.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Gokart Timer">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Nagłówek - górny pasek -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🏎️" FontSize="24" VerticalAlignment="Center" Margin="5,0"/>
                <TextBlock Text="Gokart Timer" FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
        </Border>
        
        <!-- Główna zawartość - tabela okrążeń -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="20">
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Command="{Binding LoadLapsCommand}" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" Margin="0,0,5,0"/>
                        <TextBlock Text="Odśwież dane"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <Border Grid.Row="1" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
                <DataGrid ItemsSource="{Binding Laps}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          BorderThickness="1"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kierowca" Binding="{Binding DriverId}" Width="*" />                        
                        <DataGridTextColumn Header="Czas okrążenia" Binding="{Binding LapTime}" Width="*" />
                        <DataGridTextColumn Header="Nr okrążenia" Binding="{Binding LapNumber}" Width="*" />
                    </DataGrid.Columns>
                    
                    <DataGrid.Styles>
                        <Style Selector="DataGridColumnHeader">
                            <Setter Property="Background" Value="#f0f0f0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.Styles>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- Stopka - dolny pasek -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Status connection - red/green dot -->
                <Ellipse Grid.Column="0" Width="12" Height="12" HorizontalAlignment="Left" Margin="10,0"
                         Fill="{Binding IsServerConnected, Converter={StaticResource BoolToColorConverter}}"/>
                
                <!-- Health check button -->
                <Button Grid.Column="2" Command="{Binding CheckPingCommand}" Margin="10,0" 
                        Padding="8,4">Check Health</Button>

                <!-- Status text -->
                <TextBlock Grid.Column="1" Text="{Binding PingResult}" VerticalAlignment="Center" Margin="10,0"/>
                
            </Grid>
        </Border>
    </Grid>
</Window>
